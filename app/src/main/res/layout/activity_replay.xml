<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/fitness_plan_grey_mask_2x">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back_green_m"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"/>
        <TextView
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="话题回复" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:layout_marginLeft="5dp"
        android:hint="在这里输入正文"/>
        <TextView
            android:id="@+id/tv_et_changed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:textColor="@color/text_white"
        android:background="@mipmap/ic_achievement_palace_top"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_imgs_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>