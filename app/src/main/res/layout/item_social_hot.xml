<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.mcp1993.elantra.social.circularimage.CircularImage
            android:id="@+id/cimg_hot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher_1"
           />
        <RelativeLayout
            android:id="@+id/re_title"
            android:layout_alignTop="@id/cimg_hot"
            android:layout_toRightOf="@id/cimg_hot"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="11111111"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/txt_author"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_female"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_toRightOf="@id/cimg_hot"
            android:layout_below="@id/re_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv.30"
            android:layout_marginLeft="5dp"
            android:textColor="@color/bottom_text_color_pressed"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="dasfsdfdfffffffff"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="dsssddddddddddddddddddddddd"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_imgs"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <TextView
        android:id="@+id/txt_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="@color/bg_text_green"
        android:text="地址"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp">
        <!--time-->
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_black"
            android:text="02-17"
            />
        <!--评论-->
        <LinearLayout
            android:id="@+id/lin_comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_article_discuss"/>
            <TextView
                android:id="@+id/txt_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_black"
                android:text="0"/>
        </LinearLayout>
        <!-- 关注-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/lin_comments"
            android:orientation="horizontal"
          >
            <ImageView
                android:id="@+id/img_like"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_article_like"/>
            <TextView
                android:id="@+id/txt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_black"
                android:text="0"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>