    <RelativeLayout
        android:id="@+id/re_progress"
        android:layout_width="match_parent"
        android:layout_height="200dp"
       >
        <com.wanli.com.circleprogressview.CircleProgressView
            android:id="@+id/circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:c_colorCircle="#BEE0E0"
            app:c_colorProgress="#1EFF14"
            app:c_strokeWidth="40" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3315"
            android:textSize="50sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_history_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史最佳步数"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_progress"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日目标500步"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_progress"
            android:textColor="@color/white"/>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@id/re_progress"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_treasure_button">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_treasure"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_treasure_chest_flag"/>
                    <TextView
                        android:layout_toRightOf="@id/iv_treasure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="寻宝"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/bg_all"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_share_button">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计步分享"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/medal_invite_10"
        android:layout_below="@+id/lin_button"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />

</RelativeLayout>