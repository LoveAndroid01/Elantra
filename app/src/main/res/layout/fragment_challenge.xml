<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@mipmap/ic_achievement_palace_top">
        <TextView
            android:id="@+id/tv_rank"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10px"
            android:textSize="16sp"
            android:text="排行榜"/>
        <TextView
            android:id="@+id/tv_challenge"
            android:textSize="16sp"
            android:textColor="@color/text_white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挑战赛"/>
        <TextView
            android:id="@+id/tv_record"
            android:textSize="16sp"
            android:paddingRight="10px"
            android:textColor="@color/text_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的战绩"/>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头条新闻"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/ic_achievement_next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:layout_toLeftOf="@id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:text="查看更多"/>
            </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_clerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:id="@+id/lin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/card_topView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/iv_topWX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#dd3311"/>
            </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/challenge_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" 正在进行时 "
                        android:textColor="@color/text_white"
                        android:background="@color/bg_text_green"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:id="@+id/tv_topWX"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="123"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_topWXjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络马拉松"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_achievement_next"/>
                <TextView
                   android:layout_toLeftOf="@id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:text="查看更多"
                    />

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_marathon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_tiyu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>