<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/re_progress"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <com.wanli.com.circleprogressview.CircleProgressView
            android:id="@+id/circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:c_colorCircle="#BEE0E0"
            app:c_colorProgress="#1EFF14"
            app:c_strokeWidth="40" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3315"
            android:textSize="50sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_history_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史最佳步数"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_progress"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日目标500步"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_progress"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@id/re_progress"
        android:layout_marginTop="30dp">
